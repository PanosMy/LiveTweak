<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style Selector="TextBox.editor-input">
		<Setter Property="Background" Value="#232323"/>
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="BorderBrush" Value="#444"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="Padding" Value="6,4"/>
	</Style>

	<Style Selector="Border.type-pill">
		<Setter Property="CornerRadius" Value="4"/>
		<Setter Property="Padding" Value="6,2"/>
		<Setter Property="Child">
			<Setter.Value>
				<Template>
					<TextBlock Foreground="White" FontSize="11"/>
				</Template>
			</Setter.Value>
		</Setter>
	</Style>

	<Style Selector="Border.dirty-indicator">
		<Setter Property="CornerRadius" Value="4"/>
		<Setter Property="Background" Value="#AAE67E22"/>
		<Setter Property="Padding" Value="4,1"/>
		<Setter Property="Child">
			<Setter.Value>
				<Template>
					<TextBlock Text="Dirty" FontSize="10" Foreground="White"/>
				</Template>
			</Setter.Value>
		</Setter>
	</Style>

	<Style Selector="ListBox#CategoriesListBox ListBoxItem">
		<Setter Property="Background" Value="#303030"/>
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="Margin" Value="0,2"/>
		<Setter Property="Padding" Value="8,4"/>
	</Style>
	
</Styles>

